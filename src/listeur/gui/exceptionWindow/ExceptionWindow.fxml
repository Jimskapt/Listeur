<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>


<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8.0.76-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="listeur.gui.exceptionWindow.ExceptionWindowCtrl">
   <children>
      <BorderPane VBox.vgrow="ALWAYS">
         <bottom>
            <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <buttons>
                <Button fx:id="ok" defaultButton="true" mnemonicParsing="false" onAction="#okEvent" text="%OK" />
              </buttons>
               <BorderPane.margin>
                  <Insets top="10.0" />
               </BorderPane.margin>
            </ButtonBar>
         </bottom>
         <center>
            <BorderPane BorderPane.alignment="CENTER">
               <top>
                  <Text fx:id="description" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" textOrigin="CENTER">
                     <BorderPane.margin>
                        <Insets bottom="10.0" />
                     </BorderPane.margin>
                  </Text>
               </top>
               <bottom>
                  <Accordion BorderPane.alignment="CENTER">
                     <panes>
                      <TitledPane animated="false" contentDisplay="CENTER" onMouseClicked="#refreshWindowSize" text="%Exception">
                        <content>
                          <AnchorPane>
                                 <children>
                                    <TextArea fx:id="exceptionTrace" editable="false" promptText="Exception's data" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                                 </children>
                              </AnchorPane>
                        </content>
                      </TitledPane>
                     </panes>
                  </Accordion>
               </bottom>
            </BorderPane>
         </center>
         <top>
            <TextFlow BorderPane.alignment="CENTER" />
         </top>
         <padding>
            <Insets bottom="10.0" left="15.0" right="15.0" top="15.0" />
         </padding>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </BorderPane>
   </children>
</VBox>
